{
	"name": "zotero-reading-list",
	"version": "0.1.0",
	"description": "Keep track of whether you've read items in Zotero",
	"scripts": {
		"lint": "eslint . --ext .ts --fix --cache --cache-location .eslintcache/",
		"prebuild": "npm run lint",
		"build": "tsc --noEmit && node esbuild.js",
		"postbuild": "zotero-plugin-zipup build zotero-reading-list",
		"release": "zotero-plugin-release",
		"postversion": "git push --follow-tags"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Dominic-DallOsto/zotero-reading-list.git"
	},
	"author": {
		"name": "Dominic Dall'Osto",
		"email": "dominicd7@hotmail.com"
	},
	"bugs": {
		"url": "https://github.com/Dominic-DallOsto/zotero-reading-list/issues"
	},
	"homepage": "https://github.com/Dominic-DallOsto/zotero-reading-list",
	"dependencies": {
		"@types/mocha": "^9.0.0",
		"@typescript-eslint/eslint-plugin": "^5.9.0",
		"@typescript-eslint/parser": "^5.9.0",
		"esbuild": "^0.14.10",
		"eslint": "^8.6.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jsdoc": "^37.5.1",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"mkdirp": "^1.0.4",
		"rimraf": "^3.0.2",
		"ts-json-schema-generator": "^0.97.0",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4",
		"zotero-plugin": "^1.4.1"
	},
	"xpi": {
		"name": "Reading List for Zotero",
		"updateLink": "https://github.com/Dominic-DallOsto/zotero-reading-list/releases/download/v{version}/zotero-reading-list-{version}.xpi",
		"releaseURL": "https://github.com/Dominic-DallOsto/zotero-reading-list/releases/download/release/",
		"bootstrapped": true
	}
}
